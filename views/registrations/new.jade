extends ../layout

block content
  .row
    .cols-md-12
      h2 Register
  .row
    .cols-md-12
      form(action="/register",method="post")
        div.form-group
          label Username
          input.form-control(type="text",name="username")
        div.form-group
          label Email
          input.form-control(type="text",name="email")
        div.form-group
          label Password
          input.form-control(type="password",name="password")
        button.btn.btn-primary(type="submit",value="Register") Create Account